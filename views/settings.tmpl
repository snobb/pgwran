<table class="table" id="settings_screen">
    <tr>
        <td>
            <div class="form-group">
                <label for="settings_rad_ip">Radius IP</label>
                <input type="text" class="form-control" name="settings_rad_ip" id="settings_rad_ip" placeholder="Radius IP">
            </div>
            <div class="form-group">
                <label for="settings_rad_port">Radius Port</label>
                <input type="number" class="form-control" name="settings_rad_port" id="settings_rad_port" min="1" max="65536" placeholder="Radius Port">
            </div>

        </td><td>
            <div class="form-group">
                <label for="settings_rad_user">Radius User</label>
                <input type="text" class="form-control" name="settings_rad_user" id="settings_rad_user" placeholder="Radius User">
            </div>

            <div class="form-group">
                <label for="settings_rad_pass">Radius Password</label>
                <input type="password" class="form-control" name="settings_rad_pass" id="settings_rad_pass" placeholder="Radius Password">
            </div>
            <div class="form-group">
                <label for="settings_rad_secret">Radius Secret</label>
                <input type="text" class="form-control" name="settings_rad_secret" id="settings_rad_secret" placeholder="Radius Secret">
            </div>
        </td>
    </tr>
</table>

<button type="submit" class="btn btn-default">Save</button>

