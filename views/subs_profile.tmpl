<div id="subs_screen">
    <form class="form" role="form">
        <table class="table" id="subscriber_screen"> 
            <tr>
                <td>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" id="dropdown">Name <span class="caret"></span></button>
                                    <!-- Button and dropdown menu -->
                                    <ul class="dropdown-menu" id="dropdown_mark"></ul>
                                </div>
                                <input type="text" class="form-control" id="name" name="name">
                                <input type="hidden" class="form-control" id="subs_id" name="subs_id">
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">Network</div>
                        <div class="panel-body">
                            <div class="input-group">
                                <span class="input-group-addon input-group-sm">IP address</span>
                                <input type="text" class="form-control" id="ipaddr" name="ipaddr">
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="panel panel-default">
                        <div class="panel-heading">Attributes</div>
                        <div class="panel-body">
                            <div class="input-group">
                                <span class="input-group-addon input-group-sm">IMSI</span>
                                <input type="number" class="form-control" id="imsi" name="imsi">
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon input-group-sm">IMEI</span>
                                <input type="number" class="form-control" id="imei" name="imei">
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon input-group-sm">Calling Station ID</span>
                                <input type="number" min="0" max="999999999999999" class="form-control" id="calling_id" name="calling_id">
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon input-group-sm">Called Station ID</span>
                                <input type="text" class="form-control" id="called_id" name="called_id">
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon input-group-sm">Location info</span>
                                <input type="text" class="form-control" id="loc_info" name="loc_info">
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
        <button type="button" class="btn btn-primary" id="button_save">Save</button>
        <button type="button" class="btn btn-default" id="button_delete">Delete</button>
    </form>

    <div class="modal fade" id="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body"><h4>Are you sure you want to delete the record?</h4></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="button_ok">OK</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>

